<div class="container">
  <div class="page-header">
    <h1><%= @task.title %></h1>
    <div>
      <%= link_to edit_task_path(@task), class: "btn btn-primary" do %>
        <%= edit_icon %> Edit
      <% end %>
      <%= link_to tasks_path, class: "btn btn-outline" do %>
        <%= chevron_left_icon %> Back to Tasks
      <% end %>
    </div>
  </div>

  <div class="task-details">
    <div class="detail-section">
      <h3>Status</h3>
      <p><%= @task.status.capitalize %></p>
    </div>

    <% if @task.due_date %>
      <div class="detail-section">
        <h3>Due Date</h3>
        <p><%= @task.due_date.strftime("%B %d, %Y") %></p>
      </div>
    <% end %>

    <% if @task.notes.present? %>
      <div class="detail-section">
        <h3>Notes</h3>
        <p><%= simple_format(@task.notes) %></p>
      </div>
    <% end %>

    <div class="detail-section">
      <h3>Metrics</h3>
      <ul>
        <li>Energy: <%= @task.energy || "Not set" %></li>
        <li>Simplicity: <%= @task.simplicity || "Not set" %></li>
        <li>Impact: <%= @task.impact || "Not set" %></li>
        <li>Score: <%= @task.score ? @task.score.round(1) : "Not calculated" %></li>
      </ul>
    </div>
  </div>

  <div class="task-actions">
    <%= link_to edit_task_path(@task), class: "btn btn-primary" do %>
      <%= edit_icon %> Edit
    <% end %>
    <%= link_to @task, method: :delete, confirm: "Are you sure?", class: "btn btn-outline" do %>
      <%= delete_icon %> Delete
    <% end %>
    <%= link_to tasks_path, class: "btn btn-outline" do %>
      <%= chevron_left_icon %> Back to Tasks
    <% end %>
  </div>
</div>
