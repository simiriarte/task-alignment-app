    <div class="auth-links">
      <% if user_signed_in? %>
        <p>Welcome to your dashboard!</p>
      <% else %>
        <p>Please sign in to access your tasks and alignment tools.</p>
        <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary" %>
        <%= link_to "Sign In", new_user_session_path, class: "btn btn-outline" %>
      <% end %>
    </div>

    <% if user_signed_in? %>
      <div class="features">
        <h2>Coming Soon</h2>
        <ul>
          <li>Task management with priority levels</li>
          <li>Cognitive density scoring</li>
